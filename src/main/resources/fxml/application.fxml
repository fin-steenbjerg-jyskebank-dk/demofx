            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="time" text="time" HBox.hgrow="ALWAYS" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="updateButton" mnemonicParsing="false" onAction="#installNewVersion" text="Update Ready To Be Installed" textFill="#e11313" />
         </children>
      </HBox>
   </bottom>
   <center>
      <ImageView fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../icons/java_4096.png" />
